
@{
    ViewBag.Title = "Trở thành đối tác";
}

<div id="mycontent" style="margin-top: 82px;">
    <div class="header-page-sub text-center w-100 fs-3 fw-bold">
        <div class="bg-page-sub">
            TRỞ THÀNH ĐỐI TÁC
        </div>
    </div>
    <div class="container">
        <form class="mt-3 m-5 p-5">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Tên chủ xe *</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputName">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Số điện thoại *</label>
                <div class="col-sm-8">
                    <input type="tel" class="form-control" id="inputPhone">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Địa chỉ *</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputAdress">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email *</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" id="inputEmail">
                </div>
            </div>
            <div class="d-flex justify-content-center my-3 mt-lg-5">
                <button type="submit" class="btn btn-success align-content-center px-5 py-2">Đăng ký</button>
            </div>
        </form>
    </div>
</div>


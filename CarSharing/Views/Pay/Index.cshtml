@model CarSharing.Models.VehicleManagementModel

@{ 
    ViewBag.Title = "Thanh toán";
}

<div id="mycontent" class="pt-6" onload="updateEndDate()" style="min-height: 700px">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <img class="img-md-vehicle img-vehicle" src="@Model.Vehicle.ImageVehicle" alt="">
                <h3 class="text-uppercase text-success fw-bold mt-3 text-center">@Model.Vehicle.VehicleName</h3>
                <h6 class="text-uppercase fw-bold mt-3">Thời gian</h6>
                <div id="timebooking"></div>
                <div class="my-4">
                    <div class="fw-bold text-uppercase">Chi tiết giá</div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="float-start">Đơn giá</div>
                            <div class="float-end" id="price">@Model.Vehicle.VehiclePrice</div>
                        </div>
                        <div class="col-lg-12">
                            <div class="float-start">Thời gian thuê</div>
                            <div class="float-end" id="totalDays"></div>
                        </div>
                        <div class="col-lg-12">
                            <hr class="mt-1">
                        </div>
                        <div class="col-lg-12">
                            <div class="float-start">Tổng</div>
                            <div class="float-end" id="totalPrice"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="fw-bold fs-5 text-uppercase">Thông tin khách hàng</div>
                <hr class="my-1">
                <div class="mt-3">Nhập thông tin cá nhân để tiến hành đặt</div>
                <form class="mt-3">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Họ và tên (*)</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputName">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Số điện thoại (*)</label>
                        <div class="col-sm-8">
                            <input type="tel" class="form-control" id="inputPhone">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Địa chỉ (*)</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputAdress">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="inputEmail">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Ghi chú của khách hàng</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" id="Note"></textarea>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center my-3 mt-lg-5">
                        <button type="submit" class="btn btn-success align-content-center">Hoàn tất đặt xe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts 
{
    <script src="~/Content/assets/js/pay.js"></script>
}
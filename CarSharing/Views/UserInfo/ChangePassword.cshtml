@{ 
    ViewBag.ActionCurrent = "ChangePassword";
    ViewBag.ControllerCurrent = "UserInfo";
}
<div id="mycontent" class="pt-6 pb-5 pb-lg-0" style="min-height: 700px">
    <div class="container">
        <div class="row my-3">
            @Html.Partial("_UserInfo")
            <div class="col-lg-8 mt-3 mt-lg-0 px-5">
                <h1 class="fs-5 fw-bold mb-3">Đổi mật khẩu</h1>
                <div class="mb-3">
                    <label for="oldPassword" class="form-label">Mật khẩu cũ</label>
                    <input type="text" class="form-control" id="oldPassword" placeholder="Nhập mật khẩu cũ...">
                </div>
                <div class="mb-3">
                    <label for="newPassword" class="form-label">Mật khẩu mới</label>
                    <input type="text" class="form-control" id="newPassword" placeholder="Nhập mật khẩu mới...">
                </div>
                <div class="mb-3">
                    <label for="passwordConfirm" class="form-label">Nhập lại mật khẩu</label>
                    <input type="text" class="form-control" id="passwordConfirm" placeholder="Nhập lại mật khẩu...">
                </div>
                <button type="button" class="btn btn-success">Đổi mật khẩu</button>
            </div>
        </div>
    </div>
</div>  
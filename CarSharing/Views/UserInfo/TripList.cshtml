@model CarSharing.Models.VehicleManagementModel

@{ 
    ViewBag.Title = "Danh sách chuyến";
}
<div id="mycontent" class="pt-6 pb-5 pb-lg-0" style="min-height: 700px">
    <div class="container">
        <div class="row my-3">
            <div class="col-lg-4">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action bg-success active" aria-current="true">
                        Danh sách chuyến
                    </a>
                    <a href="@Url.Action("Information", "UserInfo")" class="list-group-item list-group-item-action">Thông tin cá nhân</a>
                    <a href="@Url.Action("ChangePassword", "UserInfo")" class="list-group-item list-group-item-action">Đổi mật khẩu</a>
                </div>
            </div>
            <div class="col-lg-8 mt-3 mt-lg-0">
                <div class="list-vehicletype">
                    <select class="form-select" aria-label="Default select example">
                        <option value="1">One</option>
                        <option value="2">Two</option>
                    </select>
                </div>
                <div class="main-content mt-3">
                    <div class="nav-select">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link text-success f active" aria-current="page" href="#">Sắp tới</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Hoàn tất</a>
                            </li>
                        </ul>
                    </div>

                    <div class="list-booking mt-3">
                        <div class="booking-item my-3">
                            <div class="row">
                                <div class="col-lg-3">
                                    <img class="w-100" style="height: 130px;" src="./assets/img/NAck_WBdKcVY88Th9rGAIQ.jpg" alt="">
                                </div>
                                <div class="col-lg-6">
                                    <h5 class="text-uppercase fw-bold">KIA MORNING 1.25 SI AT</h5>
                                    <div class="mt-3">07:00 29/06/2023 → 19:00 30/06/2023</div>
                                    <div class="fw-bold my-2">1.147.160 VNĐ</div>
                                    <div class="fw-bold p-1 d-inline text-white bg-warning">Chưa duyệt</div>
                                </div>
                                <div class="col-lg-3">
                                    <a href="@Url.Action("TripDetail", "UserInfo")">
                                        <button type="button" class="btn btn-success w-100 mb-2 mt-2 mt-lg-0">Chi tiết</button>
                                    </a>
                                    <button type="button" class="btn btn-danger w-100">Hủy đặt xe</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>